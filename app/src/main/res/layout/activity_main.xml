<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Witaj w aplikacji!"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/btnWelcomeReviews"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnWelcomeReviews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Przejrzyj powtórki"
            app:layout_constraintBottom_toTopOf="@+id/btnWelcomeDecks"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvWelcome" />

        <Button
            android:id="@+id/btnWelcomeDecks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Przejrzyj talie"
            app:layout_constraintBottom_toTopOf="@+id/btnWelcomeNewDeck"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnWelcomeReviews" />

        <Button
            android:id="@+id/btnWelcomeNewDeck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stwórz nową talię"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnWelcomeDecks" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>